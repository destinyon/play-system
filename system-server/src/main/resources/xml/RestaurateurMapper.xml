<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.RestaurateurMapper">

  <insert id="insert" parameterType="com.example.entity.Restaurateur" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO `restaurateur` (user_id)
    VALUES (#{user.id})
  </insert>

  <select id="getByUserId" parameterType="int" resultType="com.example.entity.Restaurateur">
    SELECT id, income, user_id
    FROM `restaurateur`
    WHERE user_id = #{userId}
  </select>

  <select id="getById" parameterType="int" resultType="com.example.entity.Restaurateur">
    SELECT id, income, user_id
    FROM `restaurateur`
    WHERE id = #{id}
    LIMIT 1
  </select>

  <delete id="deleteByUserId" parameterType="int">
    DELETE FROM `restaurateur` WHERE user_id = #{userId}
  </delete>

  <update id="increaseIncome">
    UPDATE `restaurateur`
    SET income = COALESCE(income, 0) + #{amount}
    WHERE id = #{id}
  </update>

  <select id="getUserIdByRestaurateurId" parameterType="int" resultType="int">
    SELECT user_id
    FROM `restaurateur`
    WHERE id = #{id}
    LIMIT 1
  </select>

</mapper>
